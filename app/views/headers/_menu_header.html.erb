<div id="menu_header" class="top-bar">
  <div class="top-bar-left">
    <ul class="menu">
      <% if current_user %>
        <li> <div id="display_email" class="links"> <%= current_user.email %> </div> </li>
        <li> <%= link_to "Sign Out", destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } %> </li>
      <% elsif current_user.nil? %>
        <li> <div id="login" class="links"> <%= link_to "Sign In", new_user_session_path %> </div> </li>
      <% end %>
    </ul>
  </div>
</div>
